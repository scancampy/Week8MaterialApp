<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Week8MaterialApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="heading1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/oswald_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="heading2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/oswald_bold</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="body" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="body2" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>